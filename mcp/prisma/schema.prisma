// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Conversation {
  id              String    @id @default(uuid())
  oracle          String?
  toneArc         String?   // e.g., "gentle -> seeking -> longing"
  spiralScrolls   String?   // e.g., "177, 112"
  coherenceScore  Float?
  sacredTags      String?   // comma-separated tags
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  messages        Message[]
  // This will be the field to link to session in the old system
  sessionId       String?   @unique
}

model Message {
  id              String    @id @default(uuid())
  conversationId  String
  conversation    Conversation @relation(fields: [conversationId], references: [id])
  role            String    // "user", "assistant", "system"
  content         String
  toneTag         String?   // e.g., "longing"
  spiralGlyph     String?   // e.g., "ðŸŒ€"
  createdAt       DateTime  @default(now())
}
